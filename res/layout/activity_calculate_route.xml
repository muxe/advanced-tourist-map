<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableLayout android:stretchColumns="1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1">
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="true">
	            <TextView android:text="Start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"/>
	            <EditText android:id="@+id/calculate_route_edittext_start" android:layout_height="wrap_content" android:text="select start" android:layout_width="wrap_content" android:enabled="false" />
	            <Button android:text="choose" android:id="@+id/calculate_route_button_choose_start" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
	            <TextView android:text="Destination" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"/>
	            <EditText android:text="select destination" android:id="@+id/calculate_route_edittext_dest" android:layout_width="wrap_content" android:layout_height="wrap_content" android:editable="false" android:enabled="false"></EditText>
	            <Button android:text="choose" android:id="@+id/calculate_route_button_choose_dest" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
            	<TextView android:text="Routing File" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"/>
				<Spinner android:id="@+id/calculate_route_spinner_routing_file" android:layout_height="wrap_content" android:prompt="@string/select_installed_routingfile" android:layout_width="match_parent" android:layout_span="2" />
            </TableRow>
        </TableLayout>
<!--         <Button android:text="Switch" android:id="@+id/calculate_route_button_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" /> -->
    </LinearLayout>
    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Find Route" android:id="@+id/calculate_route_button_calculate" android:layout_margin="5dp" />
    <Button android:text="Manage Routing Files" android:id="@+id/calculate_route_manage_button" android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_width="match_parent"/>
</LinearLayout>
