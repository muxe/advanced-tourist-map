<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.mapsforge.applications.android.advancedmapviewer"
	android:versionCode="2" android:versionName="0.2"
	android:installLocation="auto">
	<application android:label="AdvancedMapViewer"
		android:icon="@drawable/globe">
		<activity android:name=".AdvancedMapViewer" android:label="AdvancedMapViewer"
			android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".EditPreferences" />
		<activity android:name=".FileBrowser" />
		<activity android:name=".InfoView" android:theme="@android:style/Theme.NoTitleBar" />
	</application>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="8" />
</manifest>